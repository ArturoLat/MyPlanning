<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD3D4">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_thursday"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/rv_friday"
        app:layout_constraintTop_toBottomOf="@+id/rv_monday" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_saturday"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_wednesday" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_friday"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toStartOf="@+id/rv_saturday"
        app:layout_constraintTop_toBottomOf="@+id/rv_tuesday" />

    <TextView
        android:id="@+id/weekly_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="650dp"
        android:fontFamily="@font/kaushan_script"
        android:text="@string/text_weekly"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_monday"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toStartOf="@+id/rv_tuesday"
        app:layout_constraintTop_toBottomOf="@+id/weekly_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sunday"
        android:layout_width="331dp"
        android:layout_height="113dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tuesday"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toStartOf="@+id/rv_wednesday"
        app:layout_constraintTop_toBottomOf="@+id/weekly_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wednesday"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weekly_text" />

</androidx.constraintlayout.widget.ConstraintLayout>