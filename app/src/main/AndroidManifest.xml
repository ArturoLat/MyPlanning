            android:name="com.example.myplanning.activitats.Configuracio.Configuracio"
            android:exported="false"
            />

        <activity
            android:name="com.example.myplanning.activitats.LogIn.LogIn"
            android:exported="false"
            />

        <activity
            android:name="com.example.myplanning.activitats.Registre.Registre"
            android:exported="false"
            />

        <activity
            android:name="com.example.myplanning.activitats.Seleccio.Seleccio"
            android:exported="false"
            />

        <activity
            android:name="com.example.myplanning.activitats.Diari.Tarea"
            android:exported="false"
            />
    </application>

</manifest>